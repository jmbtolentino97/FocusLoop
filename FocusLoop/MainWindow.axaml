<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FocusLoop"
        xmlns:controls="clr-namespace:FocusLoop.Controls"
        xmlns:iconPacks="https://github.com/MahApps/IconPacks.Avalonia"
        mc:Ignorable="d" d:DesignWidth="420" d:DesignHeight="520"
        x:Class="FocusLoop.MainWindow"
        x:DataType="local:MainWindow"
        Title="Focus Loop"
        Width="300"
        Height="400"
        CanResize="False"
        Background="#FFFFFF"
        ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaChromeHints="PreferSystemChrome">
    <Window.Styles>
        <Style Selector="Button.pause">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Width" Value="34"/>
            <Setter Property="Height" Value="34"/>
            <Setter Property="Template">
                <ControlTemplate>
                    <Border Background="#2F80ED" CornerRadius="999">
                        <Grid ColumnDefinitions="Auto,Auto" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Rectangle Width="4" Height="13" RadiusX="2" RadiusY="2" Fill="White" Margin="0,0,6,0"/>
                            <Rectangle Grid.Column="1" Width="4" Height="13" RadiusX="2" RadiusY="2" Fill="White"/>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter>
        </Style>
        <Style Selector="Button.undo">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Width" Value="34"/>
            <Setter Property="Height" Value="34"/>
            <Setter Property="Template">
                <ControlTemplate>
                    <Border Background="Transparent" CornerRadius="999" BorderBrush="#E1E6EC" BorderThickness="1.5">
                        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Image Width="13" Height="13" Source="{iconPacks:MaterialImage Kind=ArrowULeftTop}"/>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter>
        </Style>
        <Style Selector="Button.play">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Width" Value="34"/>
            <Setter Property="Height" Value="34"/>
            <Setter Property="Template">
                <ControlTemplate>
                    <Border Background="#2F80ED" CornerRadius="999">
                        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Path Fill="White" Data="M 0 0 L 0 18 L 14 9 Z" Stretch="Uniform" Width="10" Height="13"/>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter>
        </Style>
        <Style Selector="Button.settings">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="#E1E6EC"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Width" Value="28"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="Template">
                <ControlTemplate>
                    <Border Background="Transparent" CornerRadius="999" BorderBrush="#E1E6EC" BorderThickness="1.5">
                        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Image Width="13" Height="13" Source="{iconPacks:MaterialImage Kind=Cog}"/>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter>
        </Style>
        <Style Selector="Button.settings">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="#E1E6EC"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Width" Value="28"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="Template">
                <ControlTemplate>
                    <Border Background="Transparent" CornerRadius="999" BorderBrush="#E1E6EC" BorderThickness="1.5">
                        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Image Width="13" Height="13" Source="{iconPacks:MaterialImage Kind=Cog}"/>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter>
        </Style>
    </Window.Styles>
    <Grid RowDefinitions="*,Auto,*,Auto" Margin="24">
        <!-- Overlay title text in extended title bar area -->
        <TextBlock Grid.Row="0"
                   Text="Focus Loop"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Margin="0,6,0,0"
                   Foreground="#666"
                   Opacity="0.8"
                   IsHitTestVisible="False"/>
        <Button Grid.Row="0"
                Classes="settings"
                ToolTip.Tip="Settings"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="0,6,6,0"
                Click="OnSettingsClicked"/>
        <!-- Timer area: circular progress with centered time label -->
        <Grid Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,16,0,0">
            <controls:CircularProgressBar x:Name="CircularProgress"
                                           Progress="{Binding TimerProgress}"
                                           StrokeThickness="8"
                                           Stroke="{Binding ProgressStroke}"
                                           BackgroundStroke="#E3E6EA"
                                           RimStroke="#F2F3F5"
                                           RimThickness="1"
                                           InnerPadding="20"
                                           DashCount="{Binding DashCount}"
                                           DashFill="0.35"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Width="260" Height="260"/>

            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal" Spacing="6">
                <TextBlock Text="{Binding RemainingTimeText}"
                           FontSize="40"
                           FontWeight="SemiBold"/>
            </StackPanel>
        </Grid>

        <!-- Controls row: icon buttons -->

        <!-- Controls row: icon buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Spacing="16" Margin="0,0,0,0">
            <Button Click="OnPlayClicked" ToolTip.Tip="Play" Classes="play" IsVisible="{Binding IsPlayVisible}"/>
            <Button Click="OnPauseClicked" ToolTip.Tip="Pause" Classes="pause" IsVisible="{Binding IsPauseVisible}"/>
            <Button Click="OnStopClicked" ToolTip.Tip="Stop" Classes="undo" IsVisible="{Binding IsStopVisible}"/>
        </StackPanel>
    </Grid>
</Window>

















